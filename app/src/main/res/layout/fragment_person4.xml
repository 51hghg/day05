<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PersonFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tv_xin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/shap_txt_xin"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="#2E2B2B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person"
            android:layout_marginTop="10dp"
            android:text="性别：" />

        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/xing"
            android:layout_toRightOf="@id/xing"
            android:text="男" />

        <TextView
            android:id="@+id/shengri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xing"
            android:layout_marginTop="10dp"
            android:text="生日：" />

        <TextView
            android:id="@+id/txt_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shengri"
            android:layout_toRightOf="@id/shengri"
            android:text="2020-03-04" />

        <TextView
            android:id="@+id/xingzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_birth"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/txt_birth"
            android:text="星座：" />

        <TextView
            android:id="@+id/txt_xingzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/xingzuo"
            android:layout_toRightOf="@id/xingzuo"
            android:text="射手座" />

        <TextView
            android:id="@+id/diqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shengri"
            android:layout_marginTop="10dp"
            android:text="所在地区：" />

        <TextView
            android:id="@+id/txt_logic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/diqu"
            android:layout_toRightOf="@id/diqu"
            android:text="武汉" />

        <TextView
            android:id="@+id/jineng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_logic"
            android:layout_marginTop="30dp"
            android:text="技能标签"
            android:textColor="#2E2B2B"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jineng"
            android:text="暂无" />


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>