<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            android:minHeight="0dp"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cancel" />

                    <ImageView
                        android:id="@+id/img_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/options" />

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/conce1" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_con_back"
                    app:layout_constraintTop_toBottomOf="@id/fl">

                    <RelativeLayout
                        android:id="@+id/rt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="去谈秘鲁"
                            android:textColor="#322E2E"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <Button
                            android:id="@+id/btn_love"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@id/btn_liao"
                            android:background="@drawable/shap_commond_item"
                            android:gravity="center"
                            android:text="+关注"
                            android:textColor="#FF4081" />

                        <Button
                            android:id="@+id/btn_liao"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shap_btn1"
                            android:gravity="center"
                            android:text="撩Ta"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_qianming"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:text="哈哈哈哈哈哈哈哈哈哈哈hahah1kakakkdkwkdwk"
                        app:layout_constraintTop_toBottomOf="@id/rt" />

                    <RelativeLayout
                        android:id="@+id/rt2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_qianming">

                        <TextView
                            android:id="@+id/txt_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:text="6"
                            android:textColor="#0B0B0B"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_collect"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="5dp"
                            android:text="关注" />

                        <TextView
                            android:id="@+id/txt_artice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_toRightOf="@id/txt_collect"
                            android:text="367"
                            android:textColor="#0B0B0B"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_artice"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/txt_collect"
                            android:text="粉丝" />

                        <TextView
                            android:id="@+id/txt_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_toRightOf="@id/txt_artice"
                            android:text="83994"
                            android:textColor="#0B0B0B"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_collect"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/txt_artice"
                            android:text="经验值" />
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#E1D3D3"
                    app:layout_constraintTop_toBottomOf="@id/con2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|bottom|right"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="#FF4081" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"></androidx.viewpager.widget.ViewPager>

</androidx.coordinatorlayout.widget.CoordinatorLayout>